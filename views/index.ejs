<%- include('partials/header') %>
<section class="relative bg-cover bg-center h-screen flex items-center" style="background-image: url('/images/hero.jpg'); background-attachment: fixed;">
  <div class="absolute inset-0 bg-gradient-to-br from-purple-900 to-black opacity-50"></div>
  <div id="visualizer" class="absolute inset-0"></div>
  <div class="relative z-10 text-center mx-auto">
    <h1 class="text-6xl md:text-8xl font-bold text-white mb-4 glitch" data-text="DJ AKYAM">DJ AKYAM</h1>
    <p class="text-xl md:text-2xl text-gray-300 mb-8">Experimente o som do futuro</p>
    <button id="playButton" class="bg-white text-black px-8 py-3 rounded-full text-lg font-bold hover:bg-purple-600 hover:text-white transition duration-300">
      PLAY
    </button>
  </div>
</section>
<section class="py-20 bg-gradient-to-b from-gray-900 to-dark px-4">
  <div class="container mx-auto text-center max-w-screen-lg">
    <h2 class="text-4xl font-bold mb-12" data-aos="fade-up">Últimos Lançamentos</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <% releases.forEach(release => { %>
        <div class="bg-dark rounded-lg shadow-lg p-6 hover:shadow-2xl transition duration-300" data-aos="zoom-in">
          <img src="<%= release.image %>" alt="<%= release.title %>" class="w-full h-64 object-cover rounded-md mb-4">
          <h3 class="text-2xl font-semibold mb-2"><%= release.title %></h3>
          <p class="text-gray-400 mb-4"><%= release.description %></p>
          <a href="<%= release.link %>" class="text-primary hover:underline">Ouça Agora</a>
        </div>
      <% }) %>
    </div>
  </div>
</section>
<%- include('partials/footer') %>