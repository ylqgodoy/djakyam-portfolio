<%- include('partials/header') %>
<section class="mt-20 py-20 bg-gradient-to-b from-gray-900 to-dark px-4">
  <div class="container mx-auto max-w-screen-xl">
    <h2 class="text-5xl font-bold text-center mb-16 text-white" data-aos="fade-up">Galeria Exclusiva</h2>
    
    <div class="mb-12 text-center">
      <p class="text-xl text-gray-300 max-w-3xl mx-auto" data-aos="fade-up" data-aos-delay="100">
        Explore os momentos mais eletrizantes dos eventos de DJ Akyam. Cada imagem conta uma história de música, energia e pura diversão.
      </p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% imagens.forEach(function(imagem, indice) { %>
        <div class="group relative overflow-hidden rounded-lg shadow-lg" data-aos="fade-up" data-aos-delay="<%= (indice % 4 + 1) * 100 %>">
          <img 
            src="/images/gallery/<%= imagem %>" 
            alt="DJ Akyam Foto <%= indice + 1 %>" 
            class="w-full h-64 sm:h-72 md:h-80 object-cover transform group-hover:scale-110 transition duration-500"
            loading="lazy"
          >
          <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-0 group-hover:opacity-100 transition duration-500 flex items-end">
            <div class="p-4 w-full">
              <h3 class="text-lg font-semibold text-white">Momento Especial <%= indice + 1 %></h3>
              <p class="text-sm text-gray-300 mt-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                Clique para ampliar
              </p>
            </div>
          </div>
        </div>
      <% }); %>
    </div>

    <div class="mt-16 text-center" data-aos="fade-up">
      <a href="/events" class="inline-block bg-primary text-white px-8 py-3 rounded-full font-bold text-lg hover:bg-secondary transition duration-300">
        Ver Próximos Eventos
      </a>
    </div>
  </div>
</section>

<!-- Lightbox Modal -->
<div id="lightbox" class="fixed inset-0 bg-black bg-opacity-90 flex items-center justify-center z-50 hidden">
  <button id="close-lightbox" class="absolute top-4 right-4 text-white text-4xl">&times;</button>
  <img id="lightbox-image" src="" alt="Imagem ampliada" class="max-w-full max-h-full object-contain">
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const lightbox = document.getElementById('lightbox');
    const lightboxImage = document.getElementById('lightbox-image');
    const closeLightbox = document.getElementById('close-lightbox');
    const galleryImages = document.querySelectorAll('.grid img');

    galleryImages.forEach(img => {
      img.addEventListener('click', function() {
        lightboxImage.src = this.src;
        lightbox.classList.remove('hidden');
      });
    });

    closeLightbox.addEventListener('click', function() {
      lightbox.classList.add('hidden');
    });

    lightbox.addEventListener('click', function(e) {
      if (e.target === lightbox) {
        lightbox.classList.add('hidden');
      }
    });
  });
</script>
<%- include('partials/footer') %>